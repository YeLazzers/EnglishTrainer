{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "dist",
    "rootDir": "src",
    "paths": {
      "@domain": ["src/domain"],
      "@domain/*": ["src/domain/*"],
      "@adapters": ["src/adapters"],
      "@adapters/*": ["src/adapters/*"],
      "@sm": ["src/stateMachine"],
      "@sm/*": ["src/stateMachine/*"],
      "@commands": ["src/commands"],
      "@commands/*": ["src/commands/*"],
      "@handlers": ["src/handlers"],
      "@handlers/*": ["src/handlers/*"],
      "@llm": ["src/llm"],
      "@llm/*": ["src/llm/*"]
    },
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src"]
}
