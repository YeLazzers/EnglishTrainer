# Telegram Bot Token (получить через @BotFather)
BOT_TOKEN=your_bot_token_here

# LLM Provider: "gemini" или "openai"
LLM_PROVIDER=openai

# Google Gemini API Key (если используете Gemini)
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API Key (если используете OpenAI)
OPENAI_API_KEY=your_openai_api_key_here

# Database URL (SQLite для Railway - будет создан автоматически)
# Для Railway рекомендуется использовать /app/data/ для persistent storage
DATABASE_URL=file:/app/data/production.db

# Redis URL (будет автоматически подставлен из Railway Redis Plugin)
# Формат: redis://default:password@redis.railway.internal:6379
REDIS_URL=redis://localhost:6379
